#!/usr/bin/env bash

# Run this script using `sudo ./setup-linux`
set -o nounset
set -o errexit
set -o pipefail

# If need be nginx can proxy to another ip eg for docker env, or virtual machine

if [ ! -f .env ]; then
    echo ".env file not found!"
    exit 1
fi

set -a
source .env
set +a

echo "Run bin/bootstrap separately, not using sudo"
# Bootstrap the site - sets up symlinks to database.yml, etc. Be sure to set the correct dropbox folder in bootstrap first.
# bin/bootstrap

# Create config file for the app / site.
cat > "/etc/nginx/sites-available/${APP_SUBDOMAIN}.conf" <<-EOF
server {
    listen *:443 ssl;
    server_name ${ASSETS_SUBDOMAIN}.atomicjolt.xyz;

    ssl_session_cache         builtin:1000  shared:SSL:10m;
    ssl_protocols             TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers               HIGH:!aNULL:!eNULL:!EXPORT:!CAMELLIA:!DES:!MD5:!PSK:!RC4;
    ssl_prefer_server_ciphers on;

    ssl_certificate     ssl/STAR_atomicjolt_xyz.crt;
    ssl_certificate_key ssl/STAR_atomicjolt_xyz.key;

    location / {
      proxy_set_header   Host \$host;
      proxy_set_header   X-Forwarded-Ssl on;
      proxy_set_header   X-Forwarded-For \$remote_addr;
      proxy_set_header   X-Forwarded-Proto \$scheme;
      proxy_set_header   X-Real-IP        \$remote_addr;
      proxy_set_header   Upgrade \$http_upgrade;
      proxy_set_header   Connection "upgrade";
      proxy_http_version 1.1;

      proxy_pass         http://127.0.0.1:${ASSETS_PORT}/;
    }

    # Proxy webpack dev server websocket requests
    location /sockjs-node {
      proxy_redirect off;
      proxy_http_version 1.1;
      proxy_set_header Upgrade \$http_upgrade;
      proxy_set_header Connection "upgrade";
      proxy_pass http://127.0.0.1:${ASSETS_PORT};
    }
}

server {

    listen *:443 ssl;
    server_name ${APP_SUBDOMAIN}.atomicjolt.xyz;

    ssl_session_cache         builtin:1000  shared:SSL:10m;
    ssl_protocols             TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers               HIGH:!aNULL:!eNULL:!EXPORT:!CAMELLIA:!DES:!MD5:!PSK:!RC4;
    ssl_prefer_server_ciphers on;

    ssl_certificate     ssl/STAR_atomicjolt_xyz.crt;
    ssl_certificate_key ssl/STAR_atomicjolt_xyz.key;

    location / {

      proxy_set_header   Host \$host;
      proxy_set_header   X-Forwarded-Ssl on;
      proxy_set_header   X-Forwarded-For \$remote_addr;
      proxy_set_header   X-Forwarded-Proto \$scheme;
      proxy_set_header   X-Real-IP        \$remote_addr;
      proxy_http_version 1.1;
      proxy_pass         http://127.0.0.1:${APP_PORT}/;

    }
}
EOF

#Add app subdomains
if ! [ -z ${APP_SUBDOMAINS+x} ];
then
  IFS=, SUBDOMAINS=($APP_SUBDOMAINS)
  for SUBDOMAIN in "${SUBDOMAINS[@]}"; do

    cat >> "/etc/nginx/sites-available/${APP_SUBDOMAIN}.conf" <<-EOFSINGLE

server {

  listen *:443 ssl;
  server_name ${SUBDOMAIN}.atomicjolt.xyz;

  ssl_session_cache         builtin:1000  shared:SSL:10m;
  ssl_protocols             TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers               HIGH:!aNULL:!eNULL:!EXPORT:!CAMELLIA:!DES:!MD5:!PSK:!RC4;
  ssl_prefer_server_ciphers on;

  ssl_certificate     ssl/STAR_atomicjolt_xyz.crt;
  ssl_certificate_key ssl/STAR_atomicjolt_xyz.key;

  location / {
    proxy_set_header   Host \$host;
    proxy_set_header   X-Forwarded-Ssl on;
    proxy_set_header   X-Forwarded-For \$remote_addr;
    proxy_set_header   X-Forwarded-Proto \$scheme;
    proxy_set_header   X-Real-IP        \$remote_addr;
    proxy_set_header   Upgrade \$http_upgrade;
    proxy_set_header   Connection "upgrade";
    proxy_http_version 1.1;
    proxy_pass         http://127.0.0.1:${APP_PORT}/;

  }
}
EOFSINGLE
  done
fi

ln -sf "/etc/nginx/sites-available/${APP_SUBDOMAIN}.conf" /etc/nginx/sites-enabled/


# Restarting nginx
echo "Restarting nginx..."
sudo systemctl restart nginx
echo "-------------------------------------"
echo "Your app has been added."
echo "Your next steps..."
echo "rails s -p ${APP_PORT}"
echo "yarn hot"
echo "Visit your assets here: https://${ASSETS_SUBDOMAIN}.atomicjolt.xyz"
echo "Visit your app / project here: https://${APP_SUBDOMAIN}.atomicjolt.xyz"
echo "-------------------------------------"
